<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.layout.StackPane?>
<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.moevm.practice.controller.MainMenuController">
    <HBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171"
          xmlns:fx="http://javafx.com/fxml/1">
        <children>
            <Button fx:id="graphFromFileInput" text="Ввести граф из файла" onAction="#inputGraphFromFile"/>
            <Button fx:id="graphFromKeyboardInput" text="Ввести граф c клавиатуры" onAction="#inputGraphFromKeyboard"/>
        </children>
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
        </padding>
    </HBox>
    <VBox fx:id="canvasHolder">
        <children>
            <Label>Введенный граф</Label>
            <Canvas fx:id="canvas" height="300" width="400"/>
        </children>
        <padding>
            <Insets left="120.0" top="20.0"/>
        </padding>
    </VBox>
    <HBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171"
          xmlns:fx="http://javafx.com/fxml/1">
        <children>
            <Button fx:id="resetGraph" text="Сбросить" onAction="#resetGraph"/>
            <Button fx:id="saveGraph" text="Сохранить" onAction="#saveGraph"/>
            <Button fx:id="runAlgorithm" text="Запустить" onAction="#runAlgorithm"/>
        </children>
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
        </padding>
    </HBox>
</VBox>
